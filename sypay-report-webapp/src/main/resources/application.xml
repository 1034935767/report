	        <property name="validationQuery" value="select sysdate() from dual" />
	    </bean>
	    <bean id="bj" class="org.apache.commons.dbcp.BasicDataSource"
	        destroy-method="close">
	        <property name="driverClassName" value="${jdbc_driverClassName}" />
	        <property name="url" value="${bj_url}" />
	        <property name="username" value="${bj_username}" />
	        <property name="password" value="${bj_password}" />
	        <property name="maxActive" value="50" />
	        <property name="maxIdle" value="8" />
	        <property name="initialSize" value="5" />
	        <property name="maxWait" value="600000" />
	        <property name="validationQuery" value="select sysdate() from dual" />
	    </bean>
	    <bean id="sjck" class="org.apache.commons.dbcp.BasicDataSource"
	        destroy-method="close">
	        <property name="driverClassName" value="${jdbc_driverClassName}" />
	        <property name="url" value="${sjck_url}" />
	        <property name="username" value="${sjck_username}" />
	        <property name="password" value="${sjck_password}" />
	        <property name="maxActive" value="50" />
	        <property name="maxIdle" value="8" />
	        <property name="initialSize" value="5" />
	        <property name="maxWait" value="600000" />
	        <property name="validationQuery" value="select sysdate() from dual" />
	    </bean>
	    <!-- 多数据源配置结束  -->
    <!-- dataSource end -->
    <context:component-scan base-package="com.sypay.**.dao.impl,com.sfpay.**.dao.impl,com.sypay.**.service.impl,com.sfpay.**.service.impl" />
