	        <property name="validationQuery" value="select sysdate() from dual" />
	    </bean>
	    <bean id="lc" class="org.apache.commons.dbcp.BasicDataSource"
	        destroy-method="close">
	        <property name="driverClassName" value="${jdbc_driverClassName}" />
	        <property name="url" value="${lc_url}" />
	        <property name="username" value="${lc_username}" />
	        <property name="password" value="${lc_password}" />
	        <property name="maxActive" value="50" />
