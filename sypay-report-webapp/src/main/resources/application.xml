	        <property name="url" value="${tms_url}" />
	        <property name="username" value="${tms_username}" />
	        <property name="password" value="${tms_password}" />
	        <property name="maxActive" value="50" />
	        <property name="maxIdle" value="8" />
	        <property name="initialSize" value="5" />
	        <property name="maxWait" value="600000" />
	        <property name="validationQuery" value="select sysdate() from dual" />
	    </bean>
	    <bean id="cod" class="org.apache.commons.dbcp.BasicDataSource"
	        destroy-method="close">
	        <property name="driverClassName" value="${jdbc_driverClassName}" />
	        <property name="url" value="${cod_url}" />
	        <property name="username" value="${cod_username}" />
	        <property name="password" value="${tms_password}" />
	        <property name="maxActive" value="50" />
