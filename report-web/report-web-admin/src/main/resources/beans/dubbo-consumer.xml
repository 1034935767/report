<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	<!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="report-admin" />
    <!-- 使用zookeeper注册中心暴露服务地址   端口是zookeeper 中配置的2181-->
    <dubbo:registry address="${dubbo_report_query_port}"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />
    <!-- 定义全局consumerp配置 -->
    <dubbo:consumer check="false"/>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:reference id="reportChartService" interface="com.report.facade.service.ReportChartService" retries="${dubbo_report_query_retries}" timeout="${dubbo_report_query_time_out}" version="${dubbo_report_query_version}"/>
    <dubbo:reference id="reportCommonConService" interface="com.report.facade.service.ReportCommonConService" retries="${dubbo_report_query_retries}" timeout="${dubbo_report_query_time_out}" version="${dubbo_report_query_version}"/>
    <dubbo:reference id="reportConditionService" interface="com.report.facade.service.ReportConditionService" retries="${dubbo_report_query_retries}" timeout="${dubbo_report_query_time_out}" version="${dubbo_report_query_version}"/>
    <dubbo:reference id="reportModelService" interface="com.report.facade.service.ReportModelService" retries="${dubbo_report_query_retries}" timeout="${dubbo_report_query_time_out}" version="${dubbo_report_query_version}"/>
    <dubbo:reference id="reportPublicService" interface="com.report.facade.service.ReportPublicService" retries="${dubbo_report_query_retries}" timeout="${dubbo_report_query_time_out}" version="${dubbo_report_query_version}"/>
    <dubbo:reference id="reportService" interface="com.report.facade.service.ReportService" retries="${dubbo_report_query_retries}" timeout="${dubbo_report_query_time_out}" version="${dubbo_report_query_version}"/>
    <dubbo:reference id="reportSqlService" interface="com.report.facade.service.ReportSqlService" retries="${dubbo_report_query_retries}" timeout="${dubbo_report_query_time_out}" version="${dubbo_report_query_version}"/>
    <dubbo:reference id="reportConfigService" interface="com.report.facade.service.ReportConfigService" retries="${dubbo_report_query_retries}" timeout="${dubbo_report_query_time_out}" version="${dubbo_report_query_version}"/>
    
</beans>